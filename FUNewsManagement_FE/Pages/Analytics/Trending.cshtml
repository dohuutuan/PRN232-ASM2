@page
@model FUNewsManagement_FE.Pages.Analytics.TrendingModel
@{
    ViewData["Title"] = "Trending Articles";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">🔥 Trending Articles</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    else if (Model.TrendingArticles == null || !Model.TrendingArticles.Any())
    {
        <div class="alert alert-info text-center">Không có bài viết nào được hiển thị.</div>
    }
    else
    {
        <table class="table table-hover align-middle table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Author</th>
                    <th>Created Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var (a, index) in Model.TrendingArticles.Select((a, i) => (a, i + 1)))
                {
                    <tr>
                        <td>@index</td>
                        <td>@a.NewsTitle</td>
                        <td>@a.Category</td>
                        <td>@a.Author</td>
                        <td>@a.CreatedDate.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
